---
interface Props{
    Nombre: string;
    Descripcion: string;
}
const { Nombre, Descripcion } = Astro.props;
---

<div
  class="w-lg p-2 md:mx-8 my-8 md:my-4 bg-white rounded-lg shadow dark:bg-[#a9bee3]"
>
<h3
  class="text-2xl font-bold tracking-tight text-justify text-black dark:text-yellow-200/90"
>
  {Nombre}
</h3>
  <span class="font-normal text-balance  text-black dark:text-white"
    >{Descripcion}</span
  >
  <br>
  <a type="button" href="/" class="text-white bg-[#a9afe3] hover:bg-[#cea9e3] focus:ring-4 focus:outline-none focus:ring-blue-300 md:font-medium rounded-lg md:text-lg px-1 md:px-4 text-center">Leccion</a>
</div>