---
interface Props {
  src: string;
  ejercicio?: string;
}

const { src, ejercicio } = Astro.props;
---
<section class="w-full py-40 md:px-20 max-w-6xl mx-auto">
  <lite-youtube videoid={src}></lite-youtube>
  <br>
  {ejercicio && (
    <a
      class=" bg-[#a9afe3] hover:bg-[#cea9e3] focus:ring-4 focus:outline-none focus:ring-blue-300 md:font-medium rounded-lg md:text-3xl text-5xl px-1 md:px-4 text-center"
      href={ejercicio}
    >
      ejercicio
    </a>
  )}
</section>
  
<script>
  import "@justinribeiro/lite-youtube"
</script>
