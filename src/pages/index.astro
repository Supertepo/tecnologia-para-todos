---
import Card from "../components/Card.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Layout from "../layouts/Layout.astro";
const Cursos = [
{
    Nombre: "Celular Inteligente 1",
    Descripcion: "Primeros pasos sobre el uso de celular inteligente",
    Link: "Leccion/SmartPhone1",
    Tipo: "Lección"
  },
  {
    Nombre: "Computadora",
    Descripcion: "Primeros pasos en el uso de una Computadora ",
    Link:"Leccion/Computadora",
    Tipo:"Lección"
  }]
---
<Layout>
  <h1
    class="dark:text-gray text-center text-9xl md:text-8xl font-bold pb-6 pt-44 md:px-28 lg:pb-10"
  >
    Lecciones recientes
  </h1>
  <SectionContainer
  class="pb-10 md:px-44 justify-items-center"
>{Cursos.map((curso)=> <Card  {...curso}/>)}
  </SectionContainer>
</Layout>
