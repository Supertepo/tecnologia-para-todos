---
import Card from "../components/Card.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Layout from "../layouts/Layout.astro";
const Cursos = [
  {
    Nombre: "Celular Inteligente",
    Descripcion: "Primeros pasos sobre el uso de smartphone",
  },
  {
    Nombre: "Impresora",
    Descripcion: "Primeros pasos para uso de impresora",
  },
  {
    Nombre: "Laptop",
    Descripcion: "Primeros pasos en el uso de laptop",
  }]
---
<Layout>
  <h1
    class="dark:text-gray text-center text-5xl md:text-6xl font-bold pb-6 pt-44 md:px-28 lg:pb-10"
  >
    Lecciones recientes
  </h1>
  <SectionContainer
  class="pb-10 md:px-44 grid md:grid-cols-3 justify-items-center"
>{Cursos.map((curso)=> <Card  {...curso}/>)}
  </SectionContainer>
</Layout>
